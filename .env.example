# Required
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
OPENROUTER_API_KEY=your_openrouter_api_key_here

# AI Model Configuration
# Available free models: tngtech/deepseek-r1t2-chimera:free, deepseek/deepseek-r1-0528:free
AI_MODEL=tngtech/deepseek-r1t2-chimera:free

# Response Settings
MAX_RESPONSE_LENGTH=4000
MAX_TOKENS=450

# Conversation Memory
# How long to remember conversations (in minutes)
CONVERSATION_TTL_MINUTES=30
# Maximum messages to keep in memory per chat
MAX_CONVERSATION_MESSAGES=10

# Retry Configuration
MAX_RETRIES=3
RETRY_DELAY_MS=1000

# Logging (error, warn, info, debug)
LOG_LEVEL=info

# Optional: Proxy support (if Telegram is blocked in your region)
# Example: http://127.0.0.1:7890 or http://user:pass@proxy.com:8080
HTTPS_PROXY=

# --- DEPLOYMENT (For Hosting Platforms) ---
# The domain where your bot is hosted (e.g., https://your-app.onrender.com)
# Leave empty for local development (polling mode)
WEBHOOK_DOMAIN=

# The port the server should listen on (Render/Railway set this automatically)
PORT=3000

# Optional: Custom Telegram API endpoint
TELEGRAM_API_ROOT=

# Optional: Bot username (auto-detected if not set)
BOT_USERNAME=
